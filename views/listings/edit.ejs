<% layout("/layout/boilerplate.ejs")-%>
<body>
    <h3>make changes</h3>
    <div class="row">
        <div class="col-8 offset-2">
    <form method ="POST"  action="/listings/<%= list._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">title</label>
        <input type="text" name="list[title]" value="<%=list.title%>" class="form-control" required>
    </div>

        <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <textarea type="text" name="list[description]" value="<%=list.description%>" class="form-control" required></textarea>
    </div>

        <div class="mb-3">
            <label for="filename" class="form-label">filename</label>
        <input type="text" name="list[image][filename]" class="form-control" value="<%=list.image.filename%>">
        </div>

        <div class="mb-3"> 
            <label for="url" class="form-label">url</label>
            <input type="file" name="list[image][url]" class="form-control" >
        </div>
       

        <div class="mb-3">
            <label for="price" class="form-label">price</label>
            <input type="number" name="list[price]" class="form-control" value="<%=list.price%>" required>
        </div>
        
       
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">location</label>
                <input type="text" name="list[location]" class="form-control" value="<%=list.location%>" required>
            </div>
           
    
            <div class="mb-3 col-md-4">
                <label for="country" class="form-label">country</label>
                <input type="text" name="list[country]" class="form-control" value="<%=list.country%>" required>
            </div>
           
        </div>
        
        <button class="btn btn-dark edit-btn">edit</button>
    </form>
    </div>
    </div>
    
</body>
